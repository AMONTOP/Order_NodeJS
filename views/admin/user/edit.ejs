<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,inital-scale=1.0,maximum-scale=1.0,user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <title>乐餐吧后台———编辑用户</title>

    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>

    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/browserChecker.js"></script>

    <!--[if lt IE 9]>
    <script src="/javascripts/modernizr.js"></script>
    <![endif]-->
</head>
<body style="font-size: 12px">

<div class="container">
    <div class="row" style="margin-top: 5px">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <div class="h1" style="display: inline-block">编辑用户</div>
                </div>

                <% if (user) { %>
                <div class="panel-body">
                    <div class="text-center">
                        <img src="<%= user.icon %>" class="img-rounded"
                             style="margin-top: 20px; margin-bottom: 20px; width: 100px; height: 100px">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                昵称：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="name" value="<%= user.name %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                真名：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="realName" value="<%= user.realName %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                生日：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="birthday" value="<%= user.birthday %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                手机：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="phoneNumber" value="<%= user.phoneNumber %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                邮箱：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="email" value="<%= user.email %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                国家：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="country" value="<%= user.country %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                城市：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="city" value="<%= user.city %>">
                    </div>
                    <div class="input-group" style="margin-top: 10px">
                        <div class="input-group-addon">
                            <div class="text-right" style="width: 50px">
                                星级：
                            </div>
                        </div>
                        <input type="text" class="form-control" id="level" value="<%= user.level %>">
                    </div>
                </div>
                <div class="text-center">
                    <button id="commitBtn" type="button" class="btn btn-success" style="margin-bottom: 20px; width: 50%">提交</button>
                </div>

                <% } %>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
    </div>
</div>

<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/javascripts/layer/layer.js"></script>
<script>
    $(document).ready(function () {
        $('#commitBtn').click(function () {
            var name = $('#name').val();
            var realName = $('#realName').val();
            var birthday = $('#birthday').val();
            var phoneNumber = $('#phoneNumber').val();
            var email = $('#email').val();
            var country = $('#country').val();
            var city = $('#city').val();
            var level = $('#level').val();


            if (!name) {
                layer.alert('请输入用户的昵称', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!realName) {
                layer.alert('请输入用户的真实姓名', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!birthday) {
                layer.alert('请输入用户的生日', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!phoneNumber) {
                layer.alert('请输入用户的手机号码', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!city) {
                layer.alert('请输入用户所在的国家', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!city) {
                layer.alert('请输入用户的所在城市', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            if (!level) {
                layer.alert('请输入用户的等级', {
                    skin: 'layui-layer-molv',  //样式类名
                    closeBtn: 0,
                    shift: 2 //动画类型
                });
                return;
            }

            var user = {};
            user.icon = 'https://avatars3.githubusercontent.com/u/290058?v=3&s=400';
            user.name = name;
            user.phoneNumber = phoneNumber;
            user.email = email;
            user.city = city;
            user.address = address;
            user.level = level;
            user.classifies = classifies;

            $.ajax({
                url: '/admin/user/edit/' + '<%= user.id %>',  //请求的url地址，这是相对于现在的位置的地址
                dataType: 'json',              //返回格式为json
                async: true,                   //请求是否异步，默认为异步，这也是ajax重要特性
                data: restaurant,              //参数值
                type: 'POST',                  //请求方式
                beforeSend: function () {      //请求前的处理

                },
                success: function (response) { //请求成功时处理
                    var errMsg = '更新失败';

                    if (response) {
                        if (response.code == 0) {
                            layer.alert('更新成功', {
                                skin: 'layui-layer-molv',  //样式类名
                                closeBtn: 0,
                                shift: 2 //动画类型
                            }, function () {
                                location.reload();
                            });
                            return;
                        }

                        if (response.message) {
                            errMsg = response.message;
                        }
                    }

                    layer.alert(errMsg, {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                error: function () {          //请求出错处理
                    layer.alert('请求失败，请重试！', {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                complete: function () {       //请求完成的处理

                }
            });
        });
    });
</script>
</body>
</html>